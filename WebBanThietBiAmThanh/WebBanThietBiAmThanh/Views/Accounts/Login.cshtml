@model WebBanThietBiAmThanh.ModelViews.LoginViewModel
@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-wrap hero-bread" style="background-image: url('/assets/images/applications-hero-home-studio.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Đăng Ký / Đăng Nhập</span></p>
                <h1 class="mb-0 bread">Đăng Nhập</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section ftco-cart bg-primary">
    <div class="container">

        <div class="row justify-content-end">

            <div class="col-lg mt-5 cart-wrap ftco-animate">
                <div class="cart-total mb-3 bg-light">
                    <h3>Đăng Nhập</h3>
                    <p>Chưa có tài khoản hãy <a href="/dang-ky.html">đăng ký tại đây</a></p>
                    <hr />
                    <form asp-action="Login" class="info">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="UserName">Email</label>
                            <input asp-for="UserName" type="text" class="form-control text-left px-3" placeholder="Nhập Email . . . ">
                            <span asp-validation-for="UserName" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="Password">Mật Khẩu</label>
                            <input asp-for="Password" type="password" class="form-control text-left px-3" placeholder="Nhập Mật Khẩu . . .">
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                        <p><button class="btn btn-primary py-3 px-4 ">Đăng Nhập</button></p>
                    </form>
                </div>
                
            </div>

        </div>
    </div>
</section>


@model WebBanThietBiAmThanh.ModelViews.RegisterVM

@{
    ViewData["Title"] = "Đăng Ký Tài Khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-wrap hero-bread" style="background-image: url('/assets/images/applications-hero-home-studio.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Đăng Ký / Đăng Nhập</span></p>
                <h1 class="mb-0 bread">Đăng Ký</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section ftco-cart bg-primary">
    <div class="container">

        <div class="row justify-content-end">

            <div class="col-lg mt-5 cart-wrap ftco-animate">
                <div class="cart-total mb-3 bg-light">
                    <h3>Đăng Ký Tài Khoản</h3>
                    <p>Nếu có tài khoản hãy <a href="/dang-nhap.html">đăng nhập tại đây</a></p>
                    <hr />
                    <p>Đăng ký tài khoản để nhận được thông báo về ưu đãi !</p>
                    <form asp-action="DangKyTaiKhoan" class="info">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="FullName">Họ Tên</label>
                            <input asp-for="FullName" type="text" class="form-control text-left px-3" placeholder="Nhập Họ Tên . . . ">
                            <span asp-validation-for="FullName" class="text-danger"></span>

                        </div>

                        <div class="row">
                            <div class="form-group col">
                                <label asp-for="Email">Email</label>
                                <input asp-for="Email" type="email" class="form-control text-left px-3" placeholder="Nhập Email . . . ">
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                            <div class="form-group col">
                                <label asp-for="Phone">Số Điện Thoại</label>
                                <input asp-for="Phone" type="tel" class="form-control text-left px-3" placeholder="Nhập Số Điện Thoại . . . ">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password">Mật Khẩu</label>
                            <input asp-for="Password" type="password" class="form-control text-left px-3" placeholder="Nhập Mật Khẩu . . .">
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword">Nhập Lại Mật Khẩu</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control text-left px-3" placeholder="Nhập Lại Mật Khẩu . . . ">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                        </div>
                        <p><button class="btn btn-primary py-3 px-4 ">Đăng Ký</button></p>
                    </form>
                </div>
                
            </div>

        </div>
    </div>
</section>


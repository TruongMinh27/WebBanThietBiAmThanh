@model IEnumerable<WebBanThietBiAmThanh.Models.Account>

@{
    ViewData["Title"] = "AdminAccount Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <!-- Content Wrapper START -->

        <div class="page-header">
            <div class="header-sub-title">
                <nav class="breadcrumb breadcrumb-dash">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>              
                    <span class="breadcrumb-item active">Quản Lý Tài Khoản</span>
                </nav>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row m-b-30">
                    <div class="col-lg-8">
                        <div class="d-md-flex">
                            <div class="m-b-10 m-r-15">
                                <select class="custom-select" id="idRole" name="idRole" style="min-width: 200px;" asp-items="ViewBag.QuyenTruyCap">
                                 
                                    <option value="0" disabled selected>Chọn Quyền truy cập</option>
                                </select>
                            </div>
                            <div class="m-b-10">
                                <select class="custom-select" id="idStatus" name="idStatus" style="min-width: 200px;" asp-items="ViewBag.lsTrangThai">

                                    <option value="" disabled selected>Chọn Trạng Thái</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 text-right">
                        <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Create" class="btn btn-primary">
                            <i class="anticon anticon-plus-circle m-r-5"></i>
                            <span>Tạo Tài Khoản</span>
                        </a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover e-commerce-table">
                        <thead>
                            <tr>

                                <th>ID</th>
                                <th>Tên</th>
                                <th>Email</th>
                                <th>Số Điện Thoại</th>
                                <th>Lần đăng nhập cuối</th>
                                <th>Quyền Truy Cập</th>
                                <th>Trạng Thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model !=null){
                                foreach (var item  in Model)
                                 {
                            <tr>
                                <td>
                                    @item.AccountId
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img class="img-fluid rounded" src="assets/images/others/thumb-9.jpg" style="max-width: 60px" alt="">
                                        <h6 class="m-b-0 m-l-10">@item.FullName</h6>
                                    </div>
                                </td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.LastLogin</td>
                                <td>@item.Role.Description</td>
                                <td>
                                    @if (item.Active)
                                    {


                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>Hoạt Động</div>
                                        </div>

                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>Khóa</div>
                                        </div>
                                    }



                                </td>
                                <td class="text-right">
                                    <a class="btn btn-primary m-r-5" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Details" asp-route-id="@item.AccountId">Chi Tiết</a>
                                    <a class="btn btn-default m-r-5" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Edit" asp-route-id="@item.AccountId">Sửa</a>
                                    <a class="btn btn-danger m-r-5" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Delete" asp-route-id="@item.AccountId">Xóa</a>
                                </td>
                            </tr>

                                }
                            }
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
   
    <!-- Content Wrapper END -->

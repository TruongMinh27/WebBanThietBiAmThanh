@model WebBanThietBiAmThanh.Models.Product

@{
    ViewData["Title"] = "Tạo Mới Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-controller="AdminProducts" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger">
    </div>
    <div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Thông Tin</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-option">Lựa chọn</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-description">Mô Tả</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group col-6">
                        <label class="font-weight-semibold" for="productName">Tên Sản Phẩm</label>
                        <input type="text" class="form-control" asp-for="ProductName">
                    </div>
                    <div class="form-group col-6">
                        <label class="font-weight-semibold" for="productName">Mô Tả Ngắn</label>
                        <input type="text" class="form-control" asp-for="ShortDesc">
                    </div>
                    <div class="row col-6">
                        <div class="form-group col-6">
                            <label class="font-weight-semibold" for="productPrice">Giá Bán</label>
                            <input type="text" class="form-control" asp-for="Price">
                        </div>
                        <div class="form-group col-6">
                            <label class="font-weight-semibold" for="productPrice">Giá Giảm</label>
                            <input type="text" class="form-control" asp-for="Discount">
                        </div>
                    </div>
                    <div class="row col-6">
                        <div class="form-group col-6">
                            <label class="font-weight-semibold" for="productCategory">Số Lượng</label>
                            <input type="text" class="form-control" asp-for="UnitInStock">
                        </div>
                        <div class="form-group col-6">
                            <label class="font-weight-semibold" for="productCategory">Danh Mục</label>
                            <select class="custom-select" asp-for="CatId" style="min-width:200px;" asp-items="ViewBag.Danhmuc">
                                <option value="" disabled selected>Chọn Danh Mục</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-6">
                        <label class="font-weight-semibold" for="">Ảnh Sản Phẩm</label>
                        <input type="file" class="form-control-file" name="fThumb" asp-for="Thumb">
                       <span asp-validation-for="Thumb" class="text-danger"></span>
                     </div>
                    <div class="col-6">

                        <div class="checkbox">
                            <input id="checkbox1" type="checkbox" checked="" asp-for="Active">
                            <label for="checkbox1">Công Khai</label>
                        </div>
                        <div class="checkbox">
                            <input id="checkbox2" type="checkbox" asp-for="HomeFlag">
                            <label for="checkbox2">Ghim Lên Trang Chủ</label>
                        </div>
                        <div class="checkbox">
                            <input id="checkbox3" type="checkbox" asp-for="BestSellers">
                            <label for="checkbox3">Sản Phẩm Bán Chạy</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-option">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="">Tiêu Đề</label>
                        <input type="text" class="form-control" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="">Tag</label>
                        <input type="text" class="form-control" asp-for="Tags">
                    </div>

                </div>
            </div>
        </div>
        <div class="m-b-15">
            <button class="btn btn-primary">
                <i class="anticon anticon-save"></i>
                <span>Save</span>
            </button>
        </div>
        <div class="tab-pane fade" id="product-edit-description">
            <div class="card">
                <div class="card-body">
                    <label class="font-weight-semibold" for="productName">Mô Tả</label>
                    <input type="text" class="form-control" asp-for="Description">
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <script src="~/Adminassets/vendors/select2/select2.min.js"></script>
    <script src="~/Adminassets/vendors/quill/quill.min.js"></script>
    <script src="~/Adminassets/js/pages/e-commerce-product-edit.js"></script>
}